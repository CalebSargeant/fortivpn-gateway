apiVersion: v1
kind: Secret
metadata:
  name: fortivpn-credentials
  namespace: networking
type: Opaque
stringData:
  # 1Password Configuration
  OP_SERVICE_ACCOUNT_TOKEN: your-1password-service-account-token-here
  OP_ITEM_NAME: Microsoft
  OP_VAULT: Private
  
  # VPN Configuration
  VPN_GATEWAY: vpn.example.com
  VPN_PORT: "443"
  # TRUSTED_CERT: "pin-sha256:base64encodedcertificatedigest"  # Optional: Gateway certificate digest for validation
  
  # BGP Configuration
  BGP_ROUTER_ID: 192.168.1.100  # This pod's IP or unique identifier
  BGP_LOCAL_AS: "65001"          # Your private AS number
  BGP_NEIGHBOR_IP: 192.168.1.1  # Your router IP
  BGP_NEIGHBOR_AS: "65000"       # Your router AS number
